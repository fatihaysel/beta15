{
    "name": "fof/username-request",
    "description": "Allow users to request new usernames",
    "keywords": [
        "flarum",
        "Friends of Flarum"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/FriendsOfFlarum/username-request/issues",
        "source": "https://github.com/FriendsOfFlarum/username-request",
        "forum": "https://discuss.flarum.org/d/20956"
    },
    "homepage": "https://friendsofflarum.org",
    "funding": [
        {
            "type": "website",
            "url": "https://opencollective.com/fof/donate"
        }
    ],
    "require": {
        "flarum/core": "^0.1.0-beta.15"
    },
    "authors": [
        {
            "name": "Charlie K",
            "email": "charlie.k@redevs.org",
            "homepage": "https://redevs.org",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "FoF\\UserRequest\\": "src/"
